generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id          Int     @id @default(autoincrement())
  type        String
  date        String
  time        String
  place       String
  durationMin Int
  activity    String
  groups      Group[] @relation("GroupSchedules")
}

model Group {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  songs     String[]   @default([])
  users     User[]     @relation("UserGroups")
  schedules Schedule[] @relation("GroupSchedules")
}

model User {
  id         Int      @id @default(autoincrement())
  phone      String   @unique
  password   String
  name       String
  surname    String
  fathername String
  birthdate  DateTime
  school     String
  address    String
  role       String
  photoURL   String   @default("")
  isActive   Boolean  @default(false)
  groups     Group[]  @relation("UserGroups")
}
