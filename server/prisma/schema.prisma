generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id          Int     @id @default(autoincrement())
  type        String
  date        String
  time        String
  place       String
  durationMin Int
  activity    String
  groups      Group[] @relation("GroupSchedules")
}

model Group {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  users     User[]     @relation("UserGroups")
  schedules Schedule[] @relation("GroupSchedules")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  surname   String
  birthdate String
  role      String
  photoURL  String?
  isActive  Boolean  @default(true)
  groups    Group[]  @relation("UserGroups")
}
